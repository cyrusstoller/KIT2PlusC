<% if @search.ad_test == 0 %>

  <div class="row">
    <div class="span4">
      <h1>Search Task</h1>
      <br>
      
      <%= render 'searches/search_instruction' %>
      
      <%= form_for @search, :html => { :class => 'form-vertical' } do |f| %>
        <%= render "shared/error_messages", :object => f.object %>
        <%= render "searches/tasks/task0", :f => f %>
        <div class="form-actions">
          <%= f.submit "Next Question", :class => 'btn btn-primary source_submit' %>
        </div>
      <% end %>
    </div>
    <div class="span8">
      <%= render 'searches/steps/source_library', :folder => "Language" %>
    </div>
  </div>

<% end %>

